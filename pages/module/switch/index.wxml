<!--pages/switch/index.wxml-->
<x-cell-group>
  <x-cell title='基本用法'>
    <x-switch value='{{switch1}}' slot="footer" bindchange='clickSwitch1'></x-switch>
  </x-cell>
  <x-cell title='自定义内容'>
    <x-switch value='{{switch2}}' slot="footer" bindchange='clickSwitch2'>
      <view slot="open">开启</view>
      <view slot="close">关闭</view>
    </x-switch>
  </x-cell>
  <x-cell title='图标'>
    <x-switch value='{{switch3}}' slot="footer" bindchange='clickSwitch3'>
      <x-icon slot="open" name='check' color='#fff' size='36'></x-icon>
      <x-icon slot="close" name='close' color='#fff' size='36'></x-icon>
    </x-switch>
  </x-cell>
  <x-cell title='禁止切换'>
    <x-switch disabled value='{{switch1}}' slot="footer" bindchange='clickSwitch'>
      <x-icon slot="open" name='check' color='#fff' size='36'></x-icon>
      <x-icon slot="close" name='close' color='#fff' size='36'></x-icon>
    </x-switch>
  </x-cell>
</x-cell-group>
