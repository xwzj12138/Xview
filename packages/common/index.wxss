/* 字体大小 */
.font-size{font-size: 24rpx;}
.font-size1{font-size: 30rpx;}
.font-size2{font-size: 36rpx;}
.weight{font-weight: 600;}
/* 圆角 */
.round {border-radius: 50%;}
.radius{border-radius: 12rpx;}
.circle{border-radius:46px}
/* -- 阴影 -- */
.shadow {box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);}
.shadow-lg {box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);}
/* flex布局 */
.flex{display: flex;display: -webkit-flex;box-sizing: border-box;}
.flex-item-center{align-items: center;}
.flex-center-center{justify-content: center;}
.flex-image{width: 100px;height: 100px;}
.flex-wrap{flex-wrap: wrap;}
.file-item{flex: 1;}
.flex-item-center{align-items: center;}
.text-center{text-align: center;}
/* line */
.inline{display:inline-block}
/* 外边距 */
.margin{margin: 10rpx;}
.margin1{margin: 10rpx 22rpx;}
.margin2{margin: 24rpx;}
/* 固定定位 */
.bottom_fixed{
  position:fixed;bottom:0;left:0;right:0;
  border-top:1px solid #f3f3f3;
}
/* 相对定位 */
.relative{position: relative;}
.absolute{position: absolute;}
/* 分隔线 */
.bottom-line::after{content:'';bottom:0;left:30rpx;right:30rpx;pointer-events:none;box-sizing:border-box;border-bottom:1px solid #e9eaec;position: absolute;}
.image{width:100%;height:100%;}
.line-between{height:16rpx;background:#F6F6F6;}
.article_row1,.article_row2,.article_row3{display: -webkit-box;-webkit-box-orient: vertical;text-overflow:ellipsis;overflow: hidden;word-wrap: break-word;}
.article_row1{-webkit-line-clamp:1;}
.article_row2{-webkit-line-clamp:2;}
.article_row3{-webkit-line-clamp:3;}
.width_100{width: 100%;}
.height_100{height: 100%;}