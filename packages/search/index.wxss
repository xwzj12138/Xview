/* packages/search/index.wxss */
.x-search{display: flex;align-items:center;padding:18rpx 10rpx;}
.x-search>view:first-child{padding-right:5px;}
.x-search>view:last-child{padding-left:5px;}
.x-search image{width:64rpx;height:64rpx;}
.search-form{display: flex;background:#f5f5f5;flex:1;align-items:center;border-radius:10rpx;}
.search-icon{margin-left:20rpx;}
.search-form input{font-size:26rpx;height:64rpx;line-height:64px;padding:0 8px;flex:1;}
.search-border-radius{border-radius:27px;}