@import '../common/index.wxss';
.btn-loading{opacity:.6}
.btn-loading-inner{display:inline-block;margin-right:12px;vertical-align:middle;width:14px;height:14px;background:0 0;border-radius:50%;border:2px solid #fff;border-color:#fff #fff #fff transparent;animation:btn-spin .6s linear;animation-iteration-count:infinite}
@keyframes btn-spin{0%{transform:rotate(0)}100%{transform:rotate(360deg)}}