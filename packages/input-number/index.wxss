.x-input-number{color:#495060}
.x-input-number view{display:inline-block;line-height:20px;padding:5px 0;text-align:center;min-width:40px;box-sizing:border-box;vertical-align:middle;font-size:46rpx;border:1rpx solid #dddee1}
.x-input-number-minus{border-right:none;border-radius:2px 0 0 2px}
.x-input-number-plus{border-left:none;border-radius:0 2px 2px 0}
.x-input-number-text{border:1rpx solid #dddee1;display:inline-block;text-align:center;vertical-align:middle;height:30px;width:40px;min-height:auto;font-size:12px;line-height:30px}
.x-input-number-disabled{border-color:#dddee1;color:#bbbec4;background:#f7f7f7}