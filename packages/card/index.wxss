.card{box-sizing:border-box;font-size:12px;color:#333;background:#fafafa;}
.card-flex{display:flex;padding:5px 10px;}
.card-flex .goods_image{width: 250rpx;height:250rpx;}
.card-flex .goods_info{flex: 1;}
.card-flex .goods_info{padding-left:10px;}
.card-inline-block{display:inline-block;width:50%;margin-bottom:8px;}
.card-inline-block .goods_image{height:376rpx;}
.goods_info{word-break: break-all;padding:0 3px;}
.goods_title{font-weight:700;overflow:hidden;display:box;display:-webkit-box;text-overflow:ellipsis;line-clamp: 2;-webkit-line-clamp:2;-webkit-box-orient: vertical;box-orient:vertical;}
.description{color:#7d7e80;padding:3px 0;}
.goods_image image{width:100%;}
.price-info{display: flex;align-items: center;}
.price-info>view:first-child{flex:1;}
.price-text{color:#f44;font-weight:700;margin-right:5px;font-size:16px;}
.otherPrice{text-decoration:line-through;color:#7d7e80;font-size:10px;}